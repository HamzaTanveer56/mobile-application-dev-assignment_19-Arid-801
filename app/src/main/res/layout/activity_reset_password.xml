<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image04"
    tools:context=".ResetPasswordActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/reset_pass"/>
    <TextView
        android:id="@+id/title"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Reset Password"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="20px"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="20px"
        android:layout_marginBottom="20px"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="25px"
        android:hint="New Password"
        android:padding="45px"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/conPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPassword"
        android:layout_marginStart="20px"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="20px"
        android:layout_marginBottom="20px"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="25px"
        android:hint="New Password"
        android:padding="45px"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/conPassword"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80px"
        android:backgroundTint="#062B4A"
        android:text="Submit"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>